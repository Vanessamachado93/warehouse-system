<h1>Fornecedores</h1>

<%if @suppliers.any?%>
  <table>
    <thead>
      <tr>
        <th>
          <th>Nome</th>
          <th>Localização</th>
        </th>
      </tr>
    </thead>
  <tbody>
    <% @suppliers.each do |supplier|%>
    <tr>
      <%= link_to supplier.brand_name%>
      <%= supplier.city%> - <%= supplier.state%>
    </tr>
    <% end %>
  </tbody>
 </table>
<%else%>
  <p>Não existe fornecedores cadastrados</p>
<% end %>