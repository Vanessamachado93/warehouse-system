<% if(@supplier.errors.any?)%>
  <p>Verifique os erros abaixo:</p>
    <ul>
      <% @supplier.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end%>
    </ul>
<% end %>


<%= form_with model: @supplier do |form|%>
  <div>
    <%= form.label :brand_name, 'Nome Fantasia:'%>
    <%= form.text_field :brand_name%>
  </div>
  <div>
    <%= form.label :corporate_name, 'Razão Social:'%>
    <%= form.text_field :corporate_name%>
  </div>
  <div>
    <%= form.label :telephone, 'Telefone:'%>
    <%= form.text_field :telephone %>
  </div>
  <div>
    <%= form.label :registration_number, 'CNPJ:'%>
    <%= form.text_field :registration_number %>
  </div>
  <div>
    <%= form.label :full_address, 'Endereço:'%>
    <%= form.text_field :full_address %>
  </div>
  <div>
    <%= form.label :city, 'Cidade:'%>
    <%= form.text_field :city %>
  </div>
  <div>
    <%= form.label :state, 'Estado:'%>
    <%= form.text_field :state %>
  </div>
  <div>
    <%= form.label :email, 'e-mail:'%>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.submit 'Salvar'%>
  </div>
<% end %>