<h1>Modelos de Produtos</h1>

<% if @product_models.any?%>

  <% @product_models.each  do |product|%>
  <div>
    <h2><%= product.name%><h2>
      <dl>
        <dt>sku</dt>
        <dd><%= product.sku%></dd>
        <dt>Fornecedor</dt>
        <dd><%=product.supplier.brand_name %></dd>
      <dl>
  </div>
  <% end %>
  <% else %>
  <p>Nenhum modelo de produto cadastrados</p>
<% end %>